generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model VideoGame {
  id         Int      @id
  slug       String
  name       String
  metacritic Float
  released   DateTime
  tba        Boolean
  updated    DateTime
  website    String
  rating     Float
  rating_top Float
}

enum Genre {
  action
  adventure
  comedy
  drama
  scifi
  space
  shounen
  police
  mystery
  supernatural
  magic
  josei
  slice_of_life
  sports
  cars
  seinen
  horror
  psychological
  thriller
  marital_arts
  super_power
  fantasy
  school
  vampire
  historical
  dementia
  mecha
  demons
  romance
  samurai
  military
  game
  music
  shoujo
  harem
}

model Anime {
  id            String   @id @default(cuid())
  anime_id      Int      @unique
  name          String   @unique
  score         Float
  genres        Genre[]
  english_name  String   @unique
  japanese_name String   @unique
  synopsis      String
  type          String
  episodes      Int
  aired         String
  premiered     String
  producers     String
  licensors     String[]
  studios       String
  source        String
  duration      String
  rating        String
  ranked        Int
  popularity    Int

  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Manga {
  id               String  @id @default(cuid())
  name             String
  date_released    String
  depth            Int
  download_timeout Float
  download_slot    String
  download_latency Float
  link             String
  genres           Genre[]
  status           String
  rating           Float
  img_link         String

  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
